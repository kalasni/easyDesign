
    <h2><i class="fa fa-star"></i> Registrarse</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
        html: {role: "form"}) do |f| %>

      <%= devise_error_messages! %>
      <% if session[:omniauth_errors]  %>
        <div class="flash "><%= session[:omniauth_errors]  %></div>
      <% end %>

      <div class="form-group">
        <%= f.label :email %><br />

        <!-- get_email_oauth es un metodo de application_helper -->
        <%= f.email_field :email, autofocus: true , class: "form-control", value: get_email_oauth %>
      </div>

      <div class="form-group">
        <%= f.label :username %><br />

        <!-- get_username_oauth es un metodo de application_helper -->
        <%= f.text_field :username, autofocus: false , class: "form-control", value: get_username_oauth %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" , class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control" %>
      </div>

      <div class="actions">
        <div class="text-center">
          <%= f.submit "Registrarse", class: "btn btn-info" %>
        </div>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
